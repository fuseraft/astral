module fileio
    def create(@_path)
        @_retval = __createfile__(@_path)
        return @_retval
    end

    def exists(@_path)
        @_retval = __fileexists__(@_path)
        return @_retval
    end

    def delete(@_path)
        @_retval = __deletefile__(@_path)
        return @_retval
    end
end

import "fileio"

@path = "hello.txt"

println "creating file `${@path}`"
fileio::create(@path)

@exists = fileio::exists(@path)

if @exists
    println "created `${@path}` successfully"
endif

@exists = fileio::exists(@path)
if @exists
    println "deleting `${@path}`"
    fileio::delete(@path)
endif

