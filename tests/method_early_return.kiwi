def is_old(@age)
    if @age >= 70
        return true
    endif

    return false
end

@i = 60

while @i <= 80 do
    @is_old = is_old(@i)

    if @is_old
        println "${@i} is old."
    else
        println "${@i} is not old."
    endif

    @i += 1
end

