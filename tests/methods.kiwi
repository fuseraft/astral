def add(@n, @m)
    println "invoked add(n = ${@n}, m = ${@m})"

    if @m < 0
        println "  m is negative"
    else
        println "  m is non-negative"
    endif
    
    @i = 0

    while @i <= @m do
        @n += @m
        println "    i = ${@i}, n = ${@n}"
        @i += 1
    end

    println "end n = ${@n}"
end

