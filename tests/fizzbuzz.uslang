@i = 1

while @i <= 15 do    
    if @i % 15 == 0
        println "FizzBuzz"
    elsif @i % 3 == 0
        println "Fizz"
    elsif @i % 5 == 0
        println "Buzz"
    else
        println "${@i}"
    endif

    @i += 1
end

