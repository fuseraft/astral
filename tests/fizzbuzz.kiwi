def fizzbuzz(@n)
    @i = 1

    while @i <= @n do    
        if @i % 15 == 0
            println "FizzBuzz"
        elsif @i % 3 == 0
            println "Fizz"
        elsif @i % 5 == 0
            println "Buzz"
        else
            println "${@i}"
        endif

        @i += 1
    end
end

fizzbuzz(@n = 15)

