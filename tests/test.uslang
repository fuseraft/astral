# arithmetic and string interpolation

@a = 5
@b = 3
@c = 4
@r = (@a + @b) / @c
@d = "(${@a} + ${@b}) / ${@c} = ${@r}"

println "a = ${@a}"
println "b = ${@b}"
println "c = ${@c}"
println "r = ${@r}"
println "${@d}\n"

@r *= 2
println "r*2 = ${@r}"
@r *= 10
println "r*10 = ${@r}"

@e = @r / 3
println "r/3 = ${@e}"

@c = 5.0
println "c = ${@c}"

@c /= 2
println "c/2 = ${@c}\n"

# string concatenation

@s = "Hello"
@s += " World!"
println "${@s}"
println "\n"

# string multiplication
@s *= 2
println "${@s}"

