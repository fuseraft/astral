# Simple string interpolation
@desc = "hybrid-typed, object-oriented, interpreted"
println "uslang is a \{@desc} scripting language.\n"

# First test: loops
println "\nLoop test."

@i = 0
@n = 2
@counter = 0
@answer = 42

for @i to 20
  @counter += @n
  println "Iteration: ${$}"
  println "Counter = \{@counter}"
endfor

print "\nTest results: "

if @counter == @answer
  println "pass"
else
  println "fail"
endif

