# arithmetic addition
a = 10, b = 20       println("${a} + ${b} = ${a + b}")
# arithmetic subtraction
a = 10, b = 20       println("${a} - ${b} = ${a - b}")
# arithmetic multiplication
a = 10, b = 20       println("${a} * ${b} = ${a * b}")
# arithmetic division
a = 10.0, b = 20     println("${a} / ${b} = ${a / b}")
# arithmetic expression
a = 10.0, b = 20.0   println("((${a} * 2) / ${b}) + 9 = ${(((a * 2) / b) + 9)}")
# logical or
a = false, b = false println("${a} || ${b} = ${a || b}")
a = false, b = true  println("${a} || ${b} = ${a || b}")
a = true, b = false  println("${a} || ${b} = ${a || b}")
a = true, b = true   println("${a} || ${b} = ${a || b}")
# logical and
a = false, b = false println("${a} && ${b} = ${a && b}")
a = false, b = true  println("${a} && ${b} = ${a && b}")
a = true, b = false  println("${a} && ${b} = ${a && b}")
a = true, b = true   println("${a} && ${b} = ${a && b}")
# logical not
a = true, b = !a     println("!${a} = ${b}")
a = !b               println("!${b} = ${a}")
a = true, b = true   println("!(${a} == ${b}) = ${!(a == b)}\n!(${a} != ${b}) = ${!(a != b)}")
# bitwise operators
a = 5, b = 9
println("(${a} & ${b}) = ${a & b}")
println("(${a} | ${b}) = ${a | b}")
println("(${a} ^ ${b}) = ${a ^ b}")
println("(${a} << 1) = ${a << 1}")
println("(${a} >> 1) = ${a >> 1}")
println("(~${a}) = ${~a}")
print("${a}, ${b} -> ")
a = a ^ b, b = a ^ b, a = a ^ b # bitswap
println("${a}, ${b}")