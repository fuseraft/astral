def loopy(stop)
  i = 0

  while i < 100 do
    i += 1
    if (i > 10 && stop)
      break
    elsif i > 10
      next
    end
  end

  return i
end

println("loop ended on ${loopy(true)}")
println("loop ended on ${loopy(false)}")

list = [], i = 1
while i <= 10 do
  list << "Item ${i}"
  i += 1
end

counter = 0
for item, index in list do
  counter += 1
  if index == 5
    next
  end
end

println("counter = ${counter}")

counter = 0
for item, index in list do
  counter += 1
  if index == 5
    break
  end
end

println("counter = ${counter}")