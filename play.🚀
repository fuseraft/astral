#!/usr/bin/astral
/# This ðŸš€ script is for experimentation. #/

/#
matrix0 = [[0] * 3] * 3   # initialize a 3x3 matrix of 0s
matrix1 = matrix0.clone() # deep copy matrix0
matrix0[0][0] = 1

println(matrix0) # prints: [[1, 0, 0], [0, 0, 0], [0, 0, 0]]
println(matrix1) # prints: [[0, 0, 0], [0, 0, 0], [0, 0, 0]]
#/

println "abbbacccadddda".split("a")    # prints: ["bbb", "ccc", "dddd"]
println "abbbacccadddda".split("a", 1) # prints: ["abbbacccadddd"]
println "abbbacccadddda".split("a", 2) # prints: ["", "bbbacccadddd"]
println "abbbacccadddda".split("a", 3) # prints: ["", "bbb", "cccadddd"]
println "abbbacccadddda".split("a", 4) # prints: ["", "bbb", "ccc", "dddd"]
/#
println "1. **`matches(regex)`**"
println "hello123".matches('^([a-z]+\d{3})$')   # prints: true
println "hello123!".matches('^([a-z]+\d{3})$')  # prints: false

println "2. **`find(regex)`**"
println "my email: example@test.com".find('\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z0-9]{2,}\b')  # prints: example@test.com

println "3. **`match(regex)`**"
println '(\w+) (\d+), (\d+)'
println "June 24, 2021".match('(\w+) (\d+), (\d+)') # prints: ["June", "24", "2021"]

println "4. **`matches_all(regex)`**"
println '\d{3}-\d{3}-\d{4}'
println "123-456-7890".matches_all('\d{3}-\d{3}-\d{4}')  # prints: true
println "123-456-789x".matches_all('\d{3}-\d{3}-\d{4}')  # prints: false

println "5. **`replace(regex, replacement)`**"
println "foo123bar456".replace('\d+', "-")  # prints: foo-bar-

println "6. **`split(regex, limit)`**"
println "one,two,three,four".split(",", 2)  # prints: ["one", "two,three,four"]

println "7. **`scan(regex)`**"
println "s7s s8s s9s".scan('\d')  # prints: ["7", "8", "9"]


println "8. **`replace(regex, replacement)`**"
println "foo123bar".replace('(\d+)', '[$1]')  # prints: foo[123]bar

#/