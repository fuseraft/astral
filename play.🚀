#!/usr/bin/astral

/#
This ðŸš€ script is for experimentation.
#/

import "@astral/fs" as fs

file_path = fs.abspath("./bin/astral")
file_size = fs.filesize(file_path)
file_bytes = fs.readbytes(file_path, 0, file_size)

fs.writebytes("./astral-binary", file_bytes)

println "File path:      ${file_path}"
println "File size:      ${file_size}"

println "Done"